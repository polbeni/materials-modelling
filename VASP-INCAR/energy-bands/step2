SYSTEM   =  INCAR for energy bands. Step 2 - Standard calculation using a suitable modified KPOINTS file

LCHARG   =  .FALSE.     # write charge densities
#LWAVE    =  .TRUE.      # write wavefunctions
LREAL    =  .FALSE.     # the projection operators are evaluated in real-space or reciprocal-space

EDIFF    =  1E-6        # break condition for electronic loop (eV)
ENCUT    =  550.0       # energy cutoff for the plane-wave basis (eV)

ISMEAR   =  0           # partial occupancies for each orbital (0->Gaussian smearing)
SIGMA    =  0.01        # width of the smearing (eV)
NBANDS   =  8           # total number of KS or QP orbitals in the calculation

ICHARG   =  11          # read charge from CHGCAR and keep fixed
LORBIT   =  11          # projection method onto local quantum numbers


GGA      =  PS          # type of LDA or GGA exchange-correlation functional
