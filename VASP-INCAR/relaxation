SYSTEM   =  INCAR for ionic relaxation

LCHARG   =  .FALSE.     # write charge densities
LWAVE    =  .FALSE.     # write wavefunctions

EDIFF    =  1E-7        # break condition for electronic loop (eV)
ENCUT    =  650.0       # energy cutoff for the plane-wave basis (eV)
ISMEAR   =  0           # partial occupancies for each orbital (0->Gaussian smearing)
SIGMA    =  0.2         # width of the smearing (eV)
IALGO    =  48          # algorithm to optimize the orbitals
NELM     =  200         # maximum number of electronic steps

#ISYM     =  -1          # switches off the use of symmetry
ISIF     =  3           # determines if compute the stress tensor and the ionic degrees of freedom
NSW      =  2000        # maximum number of ionic steps
IBRION   =  2           # how the ions are updated and moved
EDIFFG   =  -0.005      # break condition for the ionic relaxation loop

NCORE    =  24          # number of cores that work on an individual orbital

GGA      =  PS          # type of LDA or GGA exchange-correlation functional
